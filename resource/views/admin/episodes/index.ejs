<div class="d-flex justify-content-between align-items-center mb-3 border-bottom-1">
    <h2>Episodes</h2>
    <div class="btn-group">
        <a href="/admin/episodes/create" class="btn btn-sm btn-primary">Create a new episode</a>
        <a href="/admin/courses" class="btn btn-sm btn-danger">Videos courses</a>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Title</th>
                <th>Number of downloads</th>
                <th>Number of comments</th>
                <th>Hits</th>
                <th>Number of participants</th>
                <th>Course status</th>
                <th>Settings</th>
            </tr>
        </thead>
        <tbody>
            <% episodes.docs.forEach(episode => { %>
                <tr>
                    <td><a href="/courses/آپدیت-جدید-راکت"><%= episode.title %></a></td>
                    <td><%= episode.downloadCount %></td>
                    <td><%= episode.commentCount %></td>
                    <td><%= episode.viewCount %></td>
                    <td>
                        0
                    </td>
                    <td>
                        <%= episode.typeForEjs() %>
                    </td>
                    
                    <td>
                        <form action="/admin/episodes/<%= episode._id %>?_method=DELETE" method="post">
                            <!-- for send delete req -->
                            <div class="btn-group btn-group-sm">
                                <a href="/admin/episodes/<%= episode._id %>/edit" class="btn btn-primary">Edit</a>
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </div>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <!-- { pagination: courses } for back data to pagination.ejs in layouts for add pagination button -->

    <%- include(viewPath('layouts/pagination') , { pagination: episodes }); -%>

</div>