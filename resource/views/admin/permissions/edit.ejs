<div class="d-flex justify-content-between align-items-center mb-3 border-bottom-1">
    <h2>Permission Edit</h2>
</div>
<form class="form-horizontal" action="/admin/users/permissions/<%= permission.id %>?_method=put" method="post">

    <%- include(viewPath('layouts/error-messages')) -%>

    <div class="form-group row">
        <div class="col">
            <label for="name" class="control-label font-weight-bold">Permission Title</label>
            <input type="text" class="form-control" name="name" id="name" placeholder="Enter the title of the item" value="<%= old('name' , permission.name) %>">
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <label for="label" class="control-label font-weight-bold">Explain</label>
            <input type="text" class="form-control" name="label" id="label" placeholder="Enter the Explain of the item" value="<%= old('label' , permission.label) %>">
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <button type="submit" class="btn btn-danger">Edit</button>
        </div>
    </div>
</form>