<div class="d-flex justify-content-between align-items-center mb-3 border-bottom-1">
    <h2>Category Create</h2>
</div>
<form class="form-horizontal" action="/admin/categories/create" method="post">

    <%- include(viewPath('layouts/error-messages')) -%>

    <div class="form-group row">
        <div class="col">
            <label for="name" class="control-label font-weight-bold">Category Title</label>
            <input type="text" class="form-control" name="name" id="name" placeholder="Enter the title of the item" value="<%= old('name') %>">
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <label for="parent" class="control-label font-weight-bold font-weight-bold">Categories</label>
            <select name="parent" id="parent" class="form-control">
                <option value="none">main category</option>
                <% categories.forEach(category => { %>
                    <option value="<%= category.id %>" <%= String(old('categories')) == String(category.id) ? 'selected' : '' %> ><%= category.name %></option>
                <% }) %>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <button type="submit" class="btn btn-danger">Send</button>
        </div>
    </div>
</form>