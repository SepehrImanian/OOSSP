<div class="d-flex justify-content-between align-items-center mb-3 border-bottom-1">
    <h2>Categories</h2>
    <div class="btn-group">
        <a href="/admin/categories/create" class="btn btn-sm btn-primary">Create a new category</a>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Title</th>
                <th>Type</th>
                <th>Settings</th>
            </tr>
        </thead>
        <tbody>
            <% categories.docs.forEach(category => { %>
                <tr>
                    <td><a href="/courses/آپدیت-جدید-راکت"><%= category.name %></a></td>
                    <td><%= category.parent ? category.parent.name : 'main category' %></td>    
                    <td>
                        <form action="/admin/categories/<%= category.id %>?_method=DELETE" method="post">
                            <!-- for send delete req -->
                            <div class="btn-group btn-group-sm">
                                <a href="/admin/categories/<%= category.id %>/edit" class="btn btn-primary">Edit</a>
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </div>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <!-- { pagination: courses } for back data to pagination.ejs in layouts for add pagination button -->

    <%- include(viewPath('layouts/pagination') , { pagination: categories }); -%>

</div>