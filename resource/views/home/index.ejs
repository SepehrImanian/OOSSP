<div class="row mb-3">
    <div class="col-lg-12">
        <h3>Last Courses</h3>
    </div>
</div>
<div class="row">
    <% courses.forEach(course => { %>
    <div class="col-6 col-md-3">
        <div class="card">
            <img class="card-img-top" src="<%= course.thumb %>" alt="<%= course.title %>">
            <div class="card-body">
                <h3><a href="<%= course.path() %>"><%= course.title %></a></h3>
                <p class="card-text"><%- course.body.substr(0,100) %></p>
                <a href="<%= course.path() %>" class="btn btn-primary btn-sm">More Info</a>
            </div>
            <div class="card-footer text-muted">
                <%= course.viewCount %> Views
            </div>
        </div>
    </div>
    <% }) %>
</div>